{
  "name": "koaton",
  "version": "0.0.0-semantic-release",
  "description": "Koaton is a fullstack framework based on Koa.",
  "main": "./lib/index.js",
  "scripts": {
	"export": "koaton-exporter src/**/*.js lib -r src/",
	"eslint": "eslint src --ignore-path .gitignore",
	"test": "node dropdatabase.js & mocha test/unit/BundleItem.js test/integration/index.js --compilers js:babel-register",
	"cover": "nyc npm t",
    "export:live": "npm run export & chokidar src -c \"cls && npm run export\"",
    "eslint:live": "npm run eslint & chokidar src -c \"cls && npm run eslint\"",
    "test:live": "npm t -- -w",
	"cover:live": "npm-run-all --parallel cover:watch cover:reload",
	"cover:reload": "node reloadcoverage.js",
    "cover:watch": "npm run cover & chokidar src test -c \"cls & npm run cover\"",
    "codelive": "npm-run-all --parallel export:live eslint:live",
    "codeclimate": "codeclimate analyze -f html -e duplication > duplication.html",
    "commit": "git add -A & git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": "0.6.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gerard2p/koaton.git"
  },
  "keywords": [
    "koa",
    "bootstrap",
    "seed",
    "mvc",
    "emberjs",
    "websockets"
  ],
  "author": "Gerardo Pérez Pérez <gerard2perez@outlook.com>",
  "license": "AGPL-3.0",
  "readmeFilename": "README.md",
  "homepage": "https://github.com/gerard2p/koaton.git",
  "dependencies": {
    "bcrypt": "1.0.2",
    "bluebird": "^3.4.6",
    "caminte": "git+https://github.com/gerard2p/caminte.git",
    "co": "^4.6.0",
    "colors": "^1.1.2",
    "consolidate": "^0.14.5",
    "etag": "^1.7.0",
    "fs-extra": "^1.0.0",
    "glob": "^7.1.1",
    "inflection": "^1.10.0",
    "jsurl": "^0.1.5",
    "koa-logger": "^1.3.0",
    "koa-passport": "^1.3.0",
    "koa-router": "^5.4.0",
    "oauth2orize-koa": "^1.3.2",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-oauth2-client-password": "^0.1.2",
    "upath": "^0.2.0"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^3.0.0",
    "cheerio": "^0.22.0",
    "chokidar": "^1.6.1",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.12.2",
    "eslint-config-happiness": "^5.3.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "gulp-livereload": "^3.8.1",
    "koaton-exporter": "^1.0.2",
    "mocha": "^3.1.0",
    "npm-run-all": "^4.0.0",
    "nyc": "^10.0.0",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "semantic-release": "^6.3.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/support/.include.js",
      "src/support/globals.js",
      "src/support/consoleLines.js"
    ],
    "sourceMap": false,
    "instrument": false,
    "cache": true,
    "check-coverage": false,
    "all": false,
    "report-dir": "./coverage"
  },
  "env": {
    "PYTHON": "C:/Python27"
  },
  "subdomain": "bcrypt-test",
  "domains": [],
  "databases": {},
  "babel": {
    "plugins": [
      "babel-plugin-transform-koaton-es6-modules",
      "babel-plugin-transform-koa2-async-to-generator",
      "istanbul"
    ],
    "ignore": [
      "serverconf",
      "config/",
      "docs/",
      "lib/",
      "node_modules/",
      "templates/",
      "testcoverage/",
      "testingapp/"
    ]
  }
}
